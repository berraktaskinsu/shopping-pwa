{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts", "src/config/database.config.cts"]
}
